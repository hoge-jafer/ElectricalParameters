<Page x:ConnectionId='1'
    x:Class="ElectricalParameters.FindViews.Phone"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ElectricalParameters.FindViews"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:data="using:ElectricalParameters.Models"
                        
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <ScrollViewer Grid.Row="0" >
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="25"/>
                    <RowDefinition Height="25"/>
                    <RowDefinition Height="25"/>
                    <RowDefinition Height="85"/>
                    <RowDefinition Height="25"/>
                    <RowDefinition Height="25"/>
                    <RowDefinition Height="25"/>
                    <RowDefinition Height="25"/>
                    <RowDefinition Height="25"/>
                    <RowDefinition Height="25"/>
                    <RowDefinition Height="75"/>
                    <RowDefinition Height="25"/>
                    <RowDefinition Height="35"/>
                    <RowDefinition Height="25"/>
                    <RowDefinition Height="25"/>
                    <RowDefinition Height="25"/>
                    <RowDefinition Height="25"/>
                    <RowDefinition Height="25"/>
                    <RowDefinition Height="25"/>
                    <RowDefinition Height="25"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1.1*"/>
                </Grid.ColumnDefinitions>
           
                    <TextBlock Text="屏幕尺寸:"  FontSize="12" 
                               Grid.Row="0"/>
                    <TextBlock x:ConnectionId='33' Name="ScreenSizeTextBlock" 
                           FontSize="12"                             
                           Grid.Row="0"
                           Grid.Column="1"/>

                    <TextBlock Grid.Row="1"  
                                       Text="分辨率:" FontSize="12"/>
                    <TextBlock x:ConnectionId='34' Name="ResTextBlock" 
                                       FontSize="12"                                       
                                       Grid.Row="1"
                                       Grid.Column="1"/>

                    <TextBlock Text="屏幕材质:" FontSize="12" 
                               Grid.Row="2" />
                    <TextBlock x:ConnectionId='35' Name="ScreenMaterialTextBlock" FontSize="12" 
                                       Grid.Row="2"                        
                                       Grid.Column="1"/>

                    <TextBlock Text="其他屏幕参数:" FontSize="12" 
                                       Grid.Row="3"/>
                    <TextBlock x:ConnectionId='36' Name="OtherScreenParameterTextBlock" FontSize="12" 
                                   TextWrapping="WrapWholeWords"
                                       Grid.Row="3"
                                       Grid.Column="1"/>

                    <TextBlock Text="屏占比:" FontSize="12" 
                               Grid.Row="4" />
                    <TextBlock x:ConnectionId='37' Name="ScreenProportionTextBlock" 
                                       FontSize="12"                                       
                                       Grid.Row="4"
                                       Grid.Column="1"/>

                    <TextBlock Text="网络类型:" FontSize="12"      
                                       Grid.Row="5"/>
                    <TextBlock x:ConnectionId='38' Name="NetWorkTypeTextBlock" FontSize="12" 
                                       Grid.Row="5"                                      
                                       Grid.Column="1"/>

                    <TextBlock Text="操作系统:" FontSize="12"                                      
                                       Grid.Row="6"/>
                    <TextBlock x:ConnectionId='39' Name="OperatingSystemTextBlock" FontSize="12"          
                                       Grid.Row="6"
                                       Grid.Column="1"/>

                    <TextBlock Text="后置摄像头:" FontSize="12"                                      
                                       Grid.Row="7"/>
                    <TextBlock x:ConnectionId='40' Name="RearCameraTextBlock" FontSize="12"                                      
                                       Grid.Row="7"
                                       Grid.Column="1"/>

                    <TextBlock Text="前置摄像头:" 
                                       FontSize="12" Grid.Row="8" />
                    <TextBlock x:ConnectionId='41' Name="FrontFacingCameraTextBlock" FontSize="12"                                         
                                       Grid.Row="8"
                                       Grid.Column="1"/>

                    <TextBlock Text="三防功能:" FontSize="12"                                     
                                       Grid.Row="9"/>
                    <TextBlock x:ConnectionId='42' Name="THTextBlock" FontSize="12"                                      
                                       Grid.Row="9"
                                       Grid.Column="1"/>

                    <TextBlock Text="感应器:" FontSize="12" 
                                       Grid.Row="10"/>
                    <TextBlock x:ConnectionId='43' Name="SensorsTextBlock" FontSize="12" 
                                       Grid.Row="10"                                     
                                       Grid.Column="1"/>

                    <TextBlock Text="运行内存:" FontSize="12" 
                                       Grid.Row="11" />
                    <TextBlock x:ConnectionId='44' Name="MemoryTextBlock"  FontSize="12"                                       
                                       Grid.Row="11"
                                       Grid.Column="1"/>

                    <TextBlock Text="颜色:" FontSize="12" Grid.Row="12"/>
                    <TextBlock x:ConnectionId='45' Name="PhoneColorTextBlock" FontSize="12"                                       
                                       Grid.Row="12"
                                       Grid.Column="1"/>

                    <TextBlock Text="闪光灯:" FontSize="12" Grid.Row="13"/>
                    <TextBlock x:ConnectionId='46' Name="PhoneLampTextBlock" FontSize="12"                                        
                                       Grid.Column="1"
                                       Grid.Row="13"/>

                    <TextBlock Text="核心数:" FontSize="12" Grid.Row="14"/>
                    <TextBlock x:ConnectionId='47' Name="CoresTextBlock" FontSize="12" 
                                       Grid.Row="14"
                                       Grid.Column="1"/>

                    <TextBlock Text="CPU:" FontSize="12" Grid.Row="15"/>
                    <TextBlock x:ConnectionId='48' Name="PhoneCPUTextBlock" FontSize="12" 
                                       Grid.Row="15"
                                       Grid.Column="1"/>

                    <TextBlock Text="CPU频率:" FontSize="12" Grid.Row="16"/>
                    <TextBlock x:ConnectionId='49' Name="PhoneCPUFrequencyTextBlock" FontSize="12" 
                                       Grid.Row="16"
                                       Grid.Column="1"/>

                    <TextBlock Text="ROM:" FontSize="12" Grid.Row="17"/>
                    <TextBlock x:ConnectionId='50' Name="PhoneROMTextBlock" FontSize="12" 
                                       Grid.Row="17"
                                       Grid.Column="1"/>

                    <TextBlock Text="电池容量:" FontSize="12" Grid.Row="18"/>
                    <TextBlock x:ConnectionId='51' Name="BatteryCapacityTextBlock" FontSize="12" 
                                       Grid.Row="18"
                                       Grid.Column="1"/>

                <TextBlock Text="电池类型:" FontSize="12" Grid.Row="19"/>
                <TextBlock x:ConnectionId='52' Name="BatteryTypeTextBolck" FontSize="12" 
                               Grid.Column="1"
                               Grid.Row="19"/>
            </Grid>
        </ScrollViewer>
        
        
        <GridView x:ConnectionId='2' Name="PhoneGridView" Grid.Row="1"
                  IsItemClickEnabled="True"
                  HorizontalAlignment="Stretch"
                  VerticalAlignment="Stretch"
                                                     
                                                   > 
            <GridView.ItemTemplate>
                <DataTemplate                            >
                    <Grid x:ConnectionId='30'>
                        <Image x:ConnectionId='31'                               Stretch="Uniform"/>
                        <Border Background="#B6000000" Height="48" VerticalAlignment="Bottom">
                            <TextBlock x:ConnectionId='32'                           
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       Foreground="White"
                                       FontSize="28"/>
                        </Border>
                    </Grid>
                </DataTemplate>
            </GridView.ItemTemplate>
        </GridView>
        <SplitView x:ConnectionId='3' Name="PhoneSplitView" Grid.Row="1" 
                   DisplayMode="Overlay">
            <SplitView.Pane>
                <Pivot>
                    <PivotItem Header="手机">
                        <GridView x:ConnectionId='4' Name="PhoneCategoryGridView" 
                          Grid.Row="1" SelectionMode="Single"
                          IsEnabled="True">

                            <Button x:ConnectionId='5' Name="AppleButton" 
                                Content="Apple"  
                                FontSize="12" 
                                Width="90" 
                                                         />

                            <Button x:ConnectionId='6' Name="SaSumg" 
                                Content="SamSung" 
                                FontSize="12" 
                                Width="90" 
                                                    />

                            <Button x:ConnectionId='7' Name="NokiaButton" 
                                Content="Nokia" 
                                FontSize="12" 
                                Width="90"
                                                         />

                            <Button x:ConnectionId='8' Name="MicrosoftButton" 
                                Content="Microsoft"
                                                             
                                FontSize="12" Width="90"/>

                            <Button x:ConnectionId='9' Name="MotorolaButton" 
                                Content="Motorola"
                                                            
                                FontSize="12" Width="90"/>

                            <Button x:ConnectionId='10' Name="BlockBerryButton" 
                                Content="BlackBerry"
                                                              
                                FontSize="12" Width="90"/>

                            <Button x:ConnectionId='11' Name="HUAWEIButton" 
                                Content="HUAWEI"
                                                          
                                FontSize="12" Width="90"/>

                            <Button x:ConnectionId='12' Name="HTCButton" 
                                Content="HTC"
                                                       
                                FontSize="12" Width="90"/>
                            
                            <Button x:ConnectionId='13' Name="MeiZuButton" 
                            Content="MeiZu"
                                                     
                            FontSize="12"
                            Width="90"/>

                            <Button x:ConnectionId='14' Name="LenovoButton" 
                                                          
                                Content="Lenovo" FontSize="12" Width="90"/>

                            <Button x:ConnectionId='15' Name="OnePlusButton" 
                                Content="OnePlus"
                                                           
                                FontSize="12" Width="90"/>

                            <Button x:ConnectionId='16' Name="SONYButton" 
                                Content="SONY"
                                                        
                                FontSize="12" Width="90"/>

                            <Button x:ConnectionId='17' Name="OPPOButon" 
                                                       
                                Content="OPPO" 
                                FontSize="12" Width="90"/>

                            <Button x:ConnectionId='18' Name="MiButton" 
                                                      
                                Content="Mi" FontSize="12" Width="90"/>

                            <Button x:ConnectionId='19' Name="HonorButton" 
                                                         
                                Content="Honor" FontSize="12" Width="90"/>

                            <Button x:ConnectionId='20' Name="LGButton" 
                                                      
                                Content="LG" FontSize="12" Width="90"/>

                            <Button x:ConnectionId='21' Name="TCLButton" 
                                                       
                                Content="TCL" FontSize="12" Width="90"/>

                            <Button x:ConnectionId='22' Name="LetvButton" 
                                                        
                                Content="Letv" FontSize="12" Width="85"/>

                            <Button x:ConnectionId='23' Name="VivoButton" 
                                                        
                                Content="Vivo" FontSize="12" Width="90"/>

                            <Button x:ConnectionId='24' Name="SmartisanButton" 
                                Content="Smartisan" 
                                                             
                                FontSize="12" Width="90"/>

                            <Button x:ConnectionId='25' Name="ZTEButton" 
                                                       
                                Content="ZTE" FontSize="12" Width="90"/>

                            <Button x:ConnectionId='26' Name="ZUKButton" 
                                                       
                                Content="ZUK" FontSize="12" Width="90"/>

                            <Button x:ConnectionId='27' Name="QIHUButton" 
                                                        
                                Content="360" FontSize="12" Width="90"/>

                            <Button x:ConnectionId='28' Name="NubiaButton" 
                                                         
                                Content="Nubia" FontSize="12" Width="90"/>

                            <Button x:ConnectionId='29' Name="GioneeButton" 
                                                          
                                Content="Gionee" FontSize="12" Width="90"/>

                        </GridView>
                    </PivotItem>
                </Pivot>
                
            </SplitView.Pane>
        </SplitView>
    </Grid>
    <Page.BottomAppBar>
        <CommandBar ClosedDisplayMode="Compact" >
            <AppBarButton x:ConnectionId='53' Name="PhoneListAppBarButton"
                          Icon="List" Label="品牌"
                                                             />
            <AppBarButton x:ConnectionId='54' Name="HomeAppBarButton"
                          Label="主页"
                          Icon="Home"
                                                        />
        </CommandBar>
    </Page.BottomAppBar>
</Page>

