<Page
    x:Class="ElectricalParameters.Find"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ElectricalParameters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="200"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid>
            <Image Source="/Images/Picture/wallhaven-89474.png"/>
            <Border Background="#A5000000"/>
        </Grid>

        <GridView Grid.Row="1" Margin="9,10,0,0"
                  VerticalAlignment="Stretch"
                  SelectionMode="Single">
            <Grid>
                <Image Source="/Images/IconsCategory/Phone.jpg"
                       Height="95" />
                <Border Background="#A5000000"/>
                <StackPanel HorizontalAlignment="Center"
                            VerticalAlignment="Center">
                    <Button x:ConnectionId='1' Name="PhoneButton" Content="手机" 
                            Background="Transparent"
                            FontSize="24" 
                            Foreground="White"
                            Width="168"
                            Height="98"
                                                     />
                </StackPanel>
            </Grid>

            <Grid>
                <Image Source="/Images/IconsCategory/Tablet.jpg"
                       Height="95" />
                <Border Background="#A5000000"/>
                <StackPanel HorizontalAlignment="Center"
                            VerticalAlignment="Center">
                    <Button Content="平板" 
                            Background="Transparent"
                            FontSize="24" 
                            Foreground="White"
                            Width="168"
                            Height="98"/>
                </StackPanel>
            </Grid>

            <Grid>
                <Image Source="/Images/IconsCategory/Computer.jpg"
                       Height="95" />
                <Border Background="#A5000000"/>
                <StackPanel HorizontalAlignment="Center"
                            VerticalAlignment="Center">
                    <Button Content="笔记本" 
                            Background="Transparent"
                            FontSize="24" 
                            Foreground="White"
                            Width="168"
                            Height="98"/>
                </StackPanel>
            </Grid>

            <Grid>
                <Image Source="/Images/IconsCategory/Camera.jpg"
                       Height="95" />
                <Border Background="#A5000000"/>
                <StackPanel HorizontalAlignment="Center"
                            VerticalAlignment="Center">
                    <Button Content="数码" 
                            Background="Transparent"
                            FontSize="24" 
                            Foreground="White"
                            Width="168"
                            Height="98"/>
                </StackPanel>
            </Grid>

            <Grid>
                <Image Source="/Images/IconsCategory/nvidia.jpg"
                       Height="95" />
                <Border Background="#A5000000"/>
                <StackPanel HorizontalAlignment="Center"
                            VerticalAlignment="Center">
                    <Button Content="硬件" 
                            Background="Transparent"
                            FontSize="24" 
                            Foreground="White"
                            Width="168"
                            Height="98"/>
                </StackPanel>
            </Grid>

            <Grid>
                <Image Source="/Images/IconsCategory/Peripherals.jpg"
                       Height="95" />
                <Border Background="#A5000000"/>
                <StackPanel HorizontalAlignment="Center"
                            VerticalAlignment="Center">
                    <Button Content="外设" 
                            Background="Transparent"
                            FontSize="24" 
                            Foreground="White"
                            Width="168"
                            Height="98"/>
                </StackPanel>
            </Grid>
        </GridView>
    </Grid>
</Page>

